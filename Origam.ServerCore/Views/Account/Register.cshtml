@model Origam.ServerCore.IdentityServerGui.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="detailview-container">
    <div class="detailview-module with-title">
        <h2>Create a new account</h2>
        <div class="input-form">
            <form asp-controller="Account" asp-action="Register">
                @* <input type="hidden" asp-for="ReturnUrl"/> *@
                <div class="input-row">
                    <label asp-for="UserName"></label>
                    <input class="form-control"  asp-for="UserName" autofocus>
                </div>                  
                <div class="input-row">
                    <label asp-for="Name"></label>
                    <input class="form-control"  asp-for="Name">
                </div>                  
                <div class="input-row">
                    <label asp-for="FirstName"></label>
                    <input class="form-control"  asp-for="FirstName">
                </div>                
                <div class="input-row">
                    <label asp-for="Email"></label>
                    <input class="form-control"  asp-for="Email">
                </div>
                <div class="input-row">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control"  asp-for="Password" autocomplete="off">
                </div>                
                <div class="input-row">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" autocomplete="off">
                </div>
                
                <div class="input-row">
                    <a class="btn normal-size primary submit-link" href=#>Create</a>
                </div>
            </form>
        </div>
    </div>  
</div>

