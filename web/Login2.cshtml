@using Origam.Server.Utils;
@{
    Layout = "~/_Layout.cshtml";
    string confirmationCodeField = "ConfirmationCode";
    string action = Resources.Confirm;
    string actionField = "Action";
    string errorMessage = LoginHelper.Login2(this, action, actionField, confirmationCodeField);
}

<form method="post">
    <!-- TODO - add styles -->
    <div class="errorMessage">
        @errorMessage
    </div>
    <!-- confirmation text input -->
    <label class="input">
        <span>@Resources.ConfirmationCode</span>
        @Html.Password(confirmationCodeField)
    </label>
    <input type="submit" value="@action" name="@actionField" class="login" />
    <script src="js/overlay.js" type="text/javascript"></script>
    <br/>
    <div>
        <a href="~/Login">@Resources.BackToStart</a>
    </div>
</form>
